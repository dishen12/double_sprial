<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:WPFInk"
	x:Class="WPFInk.InkControl"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<local:InkFrame x:Name="_inkFrame" Margin="0" d:LayoutOverrides="Width, Height"/>
		<local:ControlPanel x:Name="_controlPanel" HorizontalAlignment="Left" Margin="0,0,0,-161" d:LayoutOverrides="Width" VerticalAlignment="Top"/>
	</Grid>
</UserControl>
<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="WPFInk.TimeBar"
	x:Name="TimeBarControl"
	d:DesignWidth="640" d:DesignHeight="48" Height="48" VerticalAlignment="Top">

	<Grid x:Name="TimeBarLayout" Background="Black" Height="48" >
		<Rectangle x:Name="TotalTimeBar" Fill="#FF929090" Margin="0,13,0,0" HorizontalAlignment="Stretch" Stroke="#FFA3A3A3" Height="22" VerticalAlignment="Top"/>
		<Rectangle x:Name="ShowTimeBar" Fill="White" Stroke="White" Margin="0,9,0,0" HorizontalAlignment="Left" Height="30" Width="30" VerticalAlignment="Top"/>
	</Grid>
</UserControl>